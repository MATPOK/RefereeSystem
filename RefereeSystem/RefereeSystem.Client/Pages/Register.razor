@page "/register"
@rendermode InteractiveWebAssembly
@using RefereeSystem.Client.Models
@inject HttpClient Http
@inject NavigationManager NavManager
@inject IJSRuntime JS

<div class="d-flex justify-content-center mt-5">
    <div class="card shadow" style="width: 500px;">
        <div class="card-header bg-success text-white">
            <h4>Rejestracja nowego konta</h4>
        </div>
        <div class="card-body">
            <EditForm Model="@registerModel" OnValidSubmit="HandleRegistration" FormName="regForm">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>Imię</label>
                        <InputText @bind-Value="registerModel.FirstName" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Nazwisko</label>
                        <InputText @bind-Value="registerModel.LastName" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">
                    <label>Email</label>
                    <InputText @bind-Value="registerModel.Email" class="form-control" />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>Miejscowość</label>
                        <InputText @bind-Value="registerModel.City" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Telefon</label>
                        <InputText @bind-Value="registerModel.PhoneNumber" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">
                    <label>Data Urodzenia</label>
                    <InputDate @bind-Value="registerModel.DateOfBirth" class="form-control" />
                </div>
                <div class="mb-3">
                    <label>Hasło</label>
                    <InputText @bind-Value="registerModel.Password" type="password" class="form-control" />
                </div>

                <button type="submit" class="btn btn-success w-100">Zarejestruj się</button>
            </EditForm>

            <div class="mt-3 text-center">
                <a href="login">Masz już konto? Zaloguj się</a>
            </div>
        </div>
    </div>
</div>

@code {
    private RegisterDto registerModel = new();

    private async Task HandleRegistration()
    {
        // Mapujemy DTO na obiekt User, którego oczekuje API
        // Uwaga: W prawdziwym projekcie lepiej używać osobnego DTO w API,
        // ale tutaj dla uproszczenia używamy klasy User z polami ustawionymi z DTO.
        var userToSend = new
        {
            FirstName = registerModel.FirstName,
            LastName = registerModel.LastName,
            Email = registerModel.Email,
            PasswordHash = registerModel.Password, // Backend to zahashuje
            City = registerModel.City,                // <<< DODANE
            PhoneNumber = registerModel.PhoneNumber,  // <<< DODANE
            DateOfBirth = DateOnly.FromDateTime(registerModel.DateOfBirth),
            Role = "Guest" // To i tak nadpisze backend, ale wysyłamy cokolwiek
        };

        var response = await Http.PostAsJsonAsync("api/auth/register", userToSend);

        if (response.IsSuccessStatusCode)
        {
            await JS.InvokeVoidAsync("alert", "Konto utworzone! Poczekaj na akceptację Administratora.");
            NavManager.NavigateTo("/login");
        }
        else
        {
            var error = await response.Content.ReadAsStringAsync();
            await JS.InvokeVoidAsync("alert", $"Błąd rejestracji: {error}");
        }
    }
}