@page "/login"
@rendermode InteractiveWebAssembly
@using RefereeSystem.Client.Models
@using Blazored.LocalStorage
@using Microsoft.AspNetCore.Components.Authorization
@using RefereeSystem.Client.Services
@inject HttpClient Http
@inject ILocalStorageService LocalStorage
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavManager


<h3>Logowanie do Systemu Obsad</h3>

<div class="card" style="width: 400px;">
    <div class="card-body">
        @* PONIŻEJ KLUCZOWA ZMIANA: FormName="loginForm" *@
        <EditForm Model="@loginModel" OnValidSubmit="HandleLogin" FormName="loginForm">
            <DataAnnotationsValidator />

            <div class="mb-3">
                <label>Email</label>
                <InputText @bind-Value="loginModel.Email" class="form-control" />
            </div>

            <div class="mb-3">
                <label>Hasło</label>
                <InputText @bind-Value="loginModel.Password" type="password" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Zaloguj się</button>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger mt-2">@errorMessage</div>
            }
        </EditForm>
    </div>
</div>

@code {
    private LoginDto loginModel = new LoginDto();
    private string errorMessage;

    private async Task HandleLogin()
    {
        errorMessage = null;

        var response = await Http.PostAsJsonAsync("api/auth/login", loginModel);

        if (response.IsSuccessStatusCode)
        {
            var result = await response.Content.ReadFromJsonAsync<LoginResponse>();

            // 1. Zapisz w LocalStorage
            await LocalStorage.SetItemAsync("authToken", result.Token);

            // 2. KLUCZOWA ZMIANA: Powiadom system o zalogowaniu!
            // Rzutujemy providera na naszą klasę, żeby użyć metody NotifyUserLogin
            (AuthStateProvider as CustomAuthStateProvider).NotifyUserLogin(result.Token);

            // 3. Przekieruj
            NavManager.NavigateTo("/");
        }
        else
        {
            errorMessage = "Błąd logowania. Sprawdź email i hasło.";
        }
    }
}